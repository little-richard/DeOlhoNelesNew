<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:orientation="vertical"
    tools:context=".View.Activity.PartidoActivity">
    <ImageView
        android:id="@+id/img_partido_act"
        android:layout_width="80dp"
        android:layout_height="50dp"
        android:layout_gravity="center" />
    <TextView
        android:id="@+id/txtNomePartidoAct"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Partido Movimento Democratico Brasileiro"/>
    <TextView
        android:id="@+id/txtSiglaPartidoAct"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="PMDB"/>
    <View
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:background="@color/colorline"
        android:focusable="true" />
    <android.support.v7.widget.RecyclerView
        android:id="@+id/recycler_item_partido"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    </android.support.v7.widget.RecyclerView>
</LinearLayout>